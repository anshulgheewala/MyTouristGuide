<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indroda">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/mytoutv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#38B6FF"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="My Tourist Guide"
            android:textSize="30dp">

        </TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indroda Park"
            android:layout_below="@+id/mytoutv"
            android:layout_marginTop="20dp"
            android:textSize="30dp"

            android:id="@+id/tv"
            android:layout_centerHorizontal="true">



        </TextView>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:id="@+id/vf"
            android:flipInterval="3000"
            android:autoStart="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:layout_below="@id/tv">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/indroda3">

            </ImageView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/indroda2">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/indroda4">
            </ImageView>







        </ViewFlipper>


        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vf"
            android:id="@+id/tv2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:justificationMode="inter_word"
            android:textSize="19dp"
            android:layout_marginLeft="12dp"
            android:text=" The Indroda Dinosaur and Fossil Park in Gandhinagar, Gujarat, India, is a park that houses fossilized remains and petrified eggs of dinosaurs. It is a man-made fossil park and not the actual nesting grounds where the dinosaurs lived. The eggs and fossils on display here are from the world's 3rd-largest dinosaur fossil excavation site and 2nd-largest hatchery at Raiyoli, Balasinor, Gujarat.[1] The Park was set up by the Geological Survey of India[1][2] and is the only dinosaur museum in the country">
        </TextView>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="22dp"
            android:id="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/indroda4">
        </ImageView>


        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv2"
            android:id="@+id/tv3"
            android:layout_centerHorizontal="true"
            android:justificationMode="inter_word"
            android:layout_marginTop="20dp"
            android:textSize="19dp"
            android:layout_marginLeft="12dp"
            android:text="The park is run by the Gujarat Ecological and Research Foundation (GEER) and has been called India's Jurassic Park. The oldest record of dinosaur bone fossils is of middle Jurassic period, and they are found from Patcham formation of Kutch basin. The fossils which were found in Upper Cretaceous formations in the region date back 66 million years. The eggs are of different sizes, some the size of cannonballs. Fossil trackways of these gargantuan animals are also on display in the park."
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="20dp"
            android:text="Location "
            android:textSize="22dp"
            android:layout_centerHorizontal="true">
        </TextView>


        <Button
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tv4"
            android:text="Click Here For Location"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"></Button>












    </RelativeLayout>


</ScrollView>