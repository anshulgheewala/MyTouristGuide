<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotels_ahmedabad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cv_g1"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"

                android:src="@drawable/hyatt">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="   Hotel Hyatt"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="25dp">
            </TextView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/cv_g2"
            app:cardCornerRadius="30dp"
            android:layout_toRightOf="@+id/cv_g1"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"

                android:src="@drawable/radisson">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="    Radisson Blu"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="15dp">
            </TextView>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cv_g3"
            app:cardCornerRadius="30dp"
            android:layout_below="@+id/cv_g1"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/metropole">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="Metropole Hotel"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/cv_g4"
            app:cardCornerRadius="30dp"
            android:layout_toRightOf="@+id/cv_g3"
            android:layout_below="@+id/cv_g2"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/taj3"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="      Hotel Taj"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cv_g5"
            app:cardCornerRadius="30dp"
            android:layout_below="@+id/cv_g3"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/riverview">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="Hotel RiverView"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/cv_g6"
            app:cardCornerRadius="30dp"
            android:layout_toRightOf="@+id/cv_g5"
            android:layout_below="@+id/cv_g4"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/novotel2"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text=" Hotel Novotel"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>