<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/mytoutv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#38B6FF"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="My Tourist Guide"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mytoutv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:text="WELCOME  BY ITC"
            android:textSize="30dp">


        </TextView>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:id="@+id/vf"
            android:flipInterval="3000"
            android:autoStart="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:layout_below="@id/tv">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/wc1">

            </ImageView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/wc2">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/wcr">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/wcr1">

            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/wc">

            </ImageView>





        </ViewFlipper>


        <TextView
            android:id="@+id/tv2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vf"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:justificationMode="inter_word"
            android:text="In an ambience steeped in history, complimented by a richness of culture acquired through centuries, Welcomhotel Vadodara is a leading 5 star hotel in Vadodara which brings you world class luxury with the warmth of Indian hospitality in an experience that is unmistakably grand. This 5 star business hotel presents a range of cuisines, accommodation and recreation options that are incomparable with the best in Vadodara. Built around the swimming pool in style of the step wells of Gujarat, this contemporary structure offers modern furnishing and comforts, with the azure waters of swimming pool cooling environment during the hottest months. Vadodara, a rapidly developing industrial city, where the past is still alive in its traditional handicrafts, its culture and legends. Welcomhotel Vadodara is located in the heart of the downtown business and entertainment district. Welcomhotel Vadodara’s reputation as Vadodara’s leading 5 star luxury hotel is anchored in many factors. it has been the hotel’s ongoing endeavour to meet and exceed the expectations of our guests. The hotel offers 133 room including 6 suites of plush accommodation and top-of-the-line Business, Conference and Leisure facilities tailored to the requirement of the discerning and modern day business traveller."
            android:textSize="19dp"></TextView>

        <TextView
            android:id="@+id/features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Features"
            android:textSize="22dp"></TextView>


        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/features"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/wci1"></ImageView>


        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/wci"></ImageView>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:layout_below="@+id/iv3"
            android:layout_marginTop="20dp"
            android:text="Location "
            android:textSize="22dp"
            android:layout_centerHorizontal="true">
        </TextView>




        <Button
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tv4"
            android:text="Click Here For Location"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"></Button>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/for_booking"
            android:layout_below="@+id/aaa"
            android:layout_marginTop="5dp"
            android:text="For Bookings Click Below "
            android:textSize="22dp"
            android:layout_centerHorizontal="true">
        </TextView>


        <Button
            android:id="@+id/goibibo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/for_booking"
            android:text="GOIBIBO"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"></Button>

        <Button
            android:id="@+id/tripadvisor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/goibibo"
            android:text="TRIPADVISOR"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"></Button>

        <Button
            android:id="@+id/makemytrip"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tripadvisor"
            android:text="MAKE MY TRIP"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"></Button>













    </RelativeLayout>

</ScrollView>