<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hyatt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/mytoutv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#38B6FF"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="My Tourist Guide"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mytoutv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:text="Hotel Hyatt"
            android:textSize="30dp">


        </TextView>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:id="@+id/vf"
            android:flipInterval="3000"
            android:autoStart="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:layout_below="@id/tv">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/h5">

            </ImageView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/h1">
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv"
                android:layout_marginTop="30dp"
                android:src="@drawable/h2">

            </ImageView>






        </ViewFlipper>


        <TextView
            android:id="@+id/tv2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vf"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:justificationMode="inter_word"
            android:text="See why so many travellers make Hyatt Ahmedabad their hotel of choice when visiting Ahmedabad. Providing an ideal mix of value, comfort and convenience, it offers a luxury setting with an array of amenities designed for travellers like you.

Rooms at Hyatt Ahmedabad offer a flat screen TV, a minibar, and air conditioning providing exceptional comfort and convenience, and guests can go online with free internet access.

A concierge is one of the conveniences offered at this hotel. A rooftop pool and breakfast buffet will also help to make your stay even more special"
            android:textSize="19dp"></TextView>

        <TextView
            android:id="@+id/features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Features"
            android:textSize="22dp"></TextView>


        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/features"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/h4"></ImageView>


        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/h3"></ImageView>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"
            android:layout_below="@+id/iv3"
            android:layout_marginTop="20dp"
            android:text="Location "
            android:textSize="22dp"
            android:layout_centerHorizontal="true">
        </TextView>




        <Button
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tv4"
            android:text="Click Here For Location"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"></Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/for_booking"
            android:layout_below="@+id/aaa"
            android:layout_marginTop="5dp"
            android:text="For Bookings Click Below "
            android:textSize="22dp"
            android:layout_centerHorizontal="true">
        </TextView>


        <Button
            android:id="@+id/goibibo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/for_booking"
            android:text="GOIBIBO"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"></Button>

        <Button
            android:id="@+id/tripadvisor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/goibibo"
            android:text="TRIPADVISOR"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"></Button>

        <Button
            android:id="@+id/makemytrip"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tripadvisor"
            android:text="MAKE MY TRIP"
            android:layout_marginBottom="50dp"
            android:layout_centerInParent="true"></Button>














    </RelativeLayout>

</ScrollView>