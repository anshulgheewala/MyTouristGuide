<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant_v">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="460dp">



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cv_g1"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"

                android:src="@drawable/leaf">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="     Bay Leaf"

                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="25dp">
            </TextView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/cv_g2"
            app:cardCornerRadius="30dp"
            android:layout_toRightOf="@+id/cv_g1"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"

                android:src="@drawable/jp1">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="Jassi De Parathe"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="15dp">
            </TextView>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cv_g3"
            app:cardCornerRadius="30dp"
            android:layout_below="@+id/cv_g1"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/mn1">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text="       Mandap"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/cv_g4"
            app:cardCornerRadius="30dp"
            android:layout_toRightOf="@+id/cv_g3"
            android:layout_below="@+id/cv_g2"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"


                android:src="@drawable/sk2"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:text=" Secret Kitchen"
                android:textColor="@color/black"
                android:paddingTop="12dp"
                android:textSize="19dp"
                android:paddingLeft="20dp">
            </TextView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>